<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dohw_bg"
    tools:context=".DoProblem">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/TheTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SecondTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ThirdTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ForthTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/FifthTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SixthTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SeventhTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/EighthTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.88" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/NinethTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/TenthTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.99" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/TheLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SecondLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.15" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ThirdLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/ForthLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/FifthLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.6" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SixthLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/SeventhLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/EighthLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.98" />

    <TextView
        android:id="@+id/ClsNum"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="20sp"
        android:background="@drawable/normalbutton"
        app:layout_constraintBottom_toBottomOf="@+id/SecondTop"
        app:layout_constraintLeft_toLeftOf="@+id/TheLeft"
        app:layout_constraintRight_toRightOf="@+id/SecondLeft"
        app:layout_constraintTop_toTopOf="@+id/TheTop" />

    <TextView
        android:id="@+id/mode"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/SecondTop"
        app:layout_constraintLeft_toLeftOf="@+id/SecondLeft"
        app:layout_constraintRight_toRightOf="@+id/ThirdLeft"
        app:layout_constraintTop_toTopOf="@+id/TheTop" />

    <TextView
        android:id="@+id/account"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/SecondTop"
        app:layout_constraintLeft_toLeftOf="@+id/SixthLeft"
        app:layout_constraintRight_toRightOf="@+id/EighthLeft"
        app:layout_constraintTop_toTopOf="@+id/TheTop" />

    <LinearLayout
        android:id="@+id/inform"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/SecondTop"
        app:layout_constraintLeft_toLeftOf="@+id/ThirdLeft"
        app:layout_constraintRight_toRightOf="@+id/SixthLeft"
        app:layout_constraintTop_toTopOf="@+id/TheTop">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Problem"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ffffff"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/SeventhTop"
        app:layout_constraintLeft_toLeftOf="@+id/SecondLeft"
        app:layout_constraintRight_toRightOf="@+id/SeventhLeft"
        app:layout_constraintTop_toTopOf="@+id/ThirdTop">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:scaleType="fitStart" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#ffffff"
            android:scaleType="fitStart" />

        <LinearLayout
            android:id="@+id/loadingbg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#55000000"
            android:clickable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:translationZ="3dp"
            android:visibility="visible">

            <ImageView
                android:id="@+id/loading"
                android:layout_width="500dp"
                android:layout_height="400dp"
                android:adjustViewBounds="true"
                android:clickable="false"
                android:src="@drawable/loading1"
                android:translationZ="4dp" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/Before"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="2dp"
        android:background="@drawable/later"
        app:layout_constraintBottom_toBottomOf="@+id/SixthTop"
        app:layout_constraintLeft_toLeftOf="@+id/TheLeft"
        app:layout_constraintRight_toRightOf="@+id/SecondLeft"
        app:layout_constraintTop_toTopOf="@+id/FifthTop" />

    <Button
        android:id="@+id/Next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/next"
        app:layout_constraintBottom_toBottomOf="@+id/SixthTop"
        app:layout_constraintLeft_toLeftOf="@+id/SeventhLeft"
        app:layout_constraintRight_toRightOf="@+id/EighthLeft"
        app:layout_constraintTop_toTopOf="@+id/FifthTop" />

    <RadioGroup
        android:id="@+id/ansgroup"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="7"
        app:layout_constraintBottom_toBottomOf="@+id/EighthTop"
        app:layout_constraintDimensionRatio="w,7:1"
        app:layout_constraintLeft_toLeftOf="@+id/SecondLeft"
        app:layout_constraintRight_toRightOf="@+id/SeventhLeft"
        app:layout_constraintTop_toTopOf="@+id/SeventhTop">

        <RadioButton
            android:id="@+id/answer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/ans_1_style"
            android:button="@null"
            android:scaleType="centerInside"
            app:layout_constraintDimensionRatio="w,1:1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ans_4_style"
            android:visibility="invisible" />
        <RadioButton
            android:id="@+id/answer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ans_2_style"
            android:button="@null"
            app:layout_constraintDimensionRatio="w,1:1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/ans_4_style"
            android:visibility="invisible" />
        <RadioButton
            android:id="@+id/answer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ans_3_style"
            android:button="@null"
            app:layout_constraintDimensionRatio="w,1:1" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ans_4_style"
            android:visibility="invisible" />
        <RadioButton
            android:id="@+id/answer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/ans_4_style"
            android:button="@null"
            app:layout_constraintDimensionRatio="w,1:1" />

        <RadioButton
            android:id="@+id/answernull"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/ipad_paper"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/TenthTop"
        app:layout_constraintLeft_toLeftOf="@+id/TheLeft"
        app:layout_constraintRight_toRightOf="@+id/SecondLeft"
        app:layout_constraintTop_toTopOf="@+id/SeventhTop">

        <TextView
            android:id="@+id/num_done"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="已答題數"
            android:paddingLeft="5dp"
            app:autoSizePresetSizes="@array/autosize_text_sizes"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/num_now"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="目前題號"
            android:paddingLeft="5dp"
            app:autoSizePresetSizes="@array/autosize_text_sizes"
            app:autoSizeTextType="uniform" />

        <TextView
            android:id="@+id/num_tot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="總題數"
            android:paddingLeft="5dp"
            app:autoSizePresetSizes="@array/autosize_text_sizes"
            app:autoSizeTextType="uniform" />

    </LinearLayout>

    <Button
        android:id="@+id/all_pb"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/pbmenu"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/ForthTop"
        app:layout_constraintDimensionRatio="4:7"
        app:layout_constraintLeft_toLeftOf="@+id/SeventhLeft"
        app:layout_constraintRight_toRightOf="@+id/EighthLeft" />

    <!--LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/ForthTop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/SeventhLeft"
        app:layout_constraintRight_toRightOf="@+id/EighthLeft"
        app:layout_constraintTop_toBottomOf="@+id/ThirdTop">

        <Button
            android:id="@+id/all_pb"
            android:background="@drawable/pbmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toTopOf="@+id/ForthTop"
            app:layout_constraintLeft_toLeftOf="@+id/SeventhLeft"
            android:visibility="visible" />
    </LinearLayout-->

    <ImageButton
        android:id="@+id/paper"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/paper"
        android:backgroundTint="#0000"
        app:autoSizeTextType="uniform"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/TenthTop"
        app:layout_constraintLeft_toLeftOf="@+id/SeventhLeft"
        app:layout_constraintRight_toRightOf="@+id/EighthLeft"
        app:layout_constraintTop_toTopOf="@+id/SeventhTop" />


    <Button
        android:id="@+id/sendans"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/blue_button"
        android:text="@string/sendAns"
        app:autoSizePresetSizes="@array/autosize_text_sizes"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/TenthTop"
        app:layout_constraintLeft_toLeftOf="@+id/ForthLeft"
        app:layout_constraintRight_toRightOf="@+id/FifthLeft"
        app:layout_constraintTop_toTopOf="@+id/NinethTop" />

</androidx.constraintlayout.widget.ConstraintLayout>